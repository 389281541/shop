<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rainbow.admin.mapper.SkuSpecMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.rainbow.admin.entity.SkuSpec">
        <id column="id" property="id" />
        <result column="sku_id" property="skuId" />
        <result column="spec_value_id" property="specValueId" />
        <result column="sort_id" property="sortId" />
        <result column="update_time" property="updateTime" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, sku_id, spec_value_id, sort_id, del_status, update_time, create_time
    </sql>

    <delete id="removeBySkuIds" parameterType="java.util.List">
        delete from sku_spec where sku_id in
        <foreach collection="skuIds" item="skuId" open="(" close=")" separator=",">
            #{skuId}
        </foreach>
    </delete>


    <select id="listBySkuId" parameterType="java.lang.Long" resultType="com.rainbow.admin.api.vo.SkuSpecSimpleVO">
        select ss.sku_id as skuId,
               ss.spec_value_id as specValueId,
               sv.spec_name_id as specNameId,
               sv.spec_value as specValue,
               sn.name as specName
        from sku_spec ss
            left join  spec_value sv on ss.spec_value_id = sv.id
            left join  spec_name sn on sn.id = sv.spec_name_id
        where
            ss.sku_id = #{skuId}
    </select>



</mapper>
